cd kafka_2.11-1.0.0 > $TMP-1200 2>&1
bin/zookeeper-server-start.sh config/zookeeper.properties > $TMP-1300 2>&1 &
bin/kafka-server-start.sh config/server.properties > $TMP-1400 2>&1 &
