{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "uses vanilla Amazon Linux AMI (ami-7172b611)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craigansibleami": "ami-7172b611"}
  }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craigansible security group",
    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-ansible-component",
     "Value":"craig-ansible"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craigansibleami"
     ]
    },
    "InstanceType": "t2.medium",
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigtest",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"echo `whoami` > /tmp/one\n",
"yum install git -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone https://github.com/craigwongva/gocontainer.git > /tmp/two 2>&1 '\n",
"rpm -iUvh https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm > /tmp/three 2>&1\n",
"yum install ansible -y > /tmp/four 2>&1\n",
"echo `whoami` > /tmp/six 2>&1\n"
     ]
    ]}}
   }
  }
}
}
