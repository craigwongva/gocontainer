{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "uses vanilla Amazon Linux AMI (ami-7172b611)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craiggoami": "ami-7172b611"}
  }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craiggo security group",
    "VpcId": "vpc-4e33072b",
    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    },
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 8080,
     "IpProtocol": "tcp",
     "ToPort": 8080
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-go-component",
     "Value":"craig-go"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craiggoami"
     ]
    },
    "InstanceType": "t2.micro",
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigtest",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"git clone https://github.com/craigwongva/gocontainer.git\n",
"cp gocontainer/userdata-hello .\n",
"chmod +x /userdata-hello\n",
"/userdata-hello\n"
     ]
    ]}}
   }
  }
}
}

