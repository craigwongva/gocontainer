{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "uses my Elasticsearch AMI (craigES ami-0c30ee6c)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craigESami": "ami-0c30ee6c"}
  }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craigES security group",
    "VpcId": "vpc-4e33072b",
    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-elk-component",
     "Value":"elasticsearch2"
    }, {
    "Key":"Name",
    "Value":"craigES"
    }
    ],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craigESami"
     ]
    },
    "InstanceType": "t2.medium",
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigelk",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone -b go https://github.com/craigwongva/gocontainer.git > /tmp/u15 2>&1'\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user/gocontainer/nexus-java; ./userdata-elasticsearch > /tmp/u16 2>&1'\n"
     ]
    ]}}
   }
  }
}
}
