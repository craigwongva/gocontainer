{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "venicegeo-devops-dev-gocontainer-project, uses vanilla Amazon Linux AMI (ami-7172b611)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craiggoami": "ami-7172b611"}
  }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craiggo security group",
    "VpcId": "vpc-4e33072b",
    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-go-component",
     "Value":"craig-go"
    }],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craiggoami"
     ]
    },
    "InstanceType": "t2.micro",
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigtest",
    "BlockDeviceMappings" : [{
      "DeviceName" : "/dev/xvda",
      "Ebs" : { "VolumeSize" : "8" }
    }],
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone -b go https://github.com/craigwongva/gocontainer.git > /tmp/u01 2>&1 '\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user/gocontainer/nexus-java; ./userdata-mercuryswarm1 > /tmp/u14 2>&1'\n"
     ]
    ]}}
   }
  }
},
"Outputs" : {
  "InstanceID" : {
    "Description": "The Instance ID",  
    "Value" : { "Fn::GetAtt" : [ "Server" , "PublicIp" ] }
  }
}
}
