##
## Install Groovy.
###

cd /home/ec2-user > /tmp/userdata-nexus-swarmmanager1-8300 2>&1
aws s3 cp s3://venicegeo-devops-dev-logstashforwarder-project/dotsdkman.zip . > /tmp/userdata-nexus-swarmmanager1-8400 2>&1
unzip dotsdkman.zip > /tmp/userdata-nexus-swarmmanager1-8500 2>&1

###
## Modify security groups that allow Manager to talk to Consul.
###

cd /home/ec2-user/gocontainer/nexus-java > /tmp/userdata-nexus-swarmmanager1-8600 2>&1
cp /home/ec2-user/.sdkman/candidates/groovy/2.4.7/lib/groovy-2.4.7.jar . > /tmp/userdata-nexus-swarmmanager1-8700 2>&1
cp /home/ec2-user/.sdkman/candidates/groovy/2.4.7/lib/groovy-json-2.4.7.jar . > /tmp/userdata-nexus-swarmmanager1-8800 2>&1
/home/ec2-user/.sdkman/candidates/groovy/2.4.7/bin/groovyc modsecgrp_manager1.groovy > /tmp/userdata-nexus-manager1-8900 2>&1
java -cp .:./groovy-2.4.7.jar:./groovy-json-2.4.7.jar modsecgrp_manager1 option1 > /tmp/userdata-nexus-manager1-9000 2>&1

sudo docker run -d -p 4000:4000 swarm manage -H :4000 --replication --advertise `curl http://169.254.169.254/latest/meta-data/public-ipv4`:4000 consul://`/home/ec2-user/.sdkman/candidates/groovy/2.4.7/bin/groovyc modsecgrp_manager1.groovy option2`:8500 > /tmp/userdata-nexus-manager1-9100
