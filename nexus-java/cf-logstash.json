{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "uses my Logstash AMI (craigLg ami-0f2ef06f)",

"Mappings": {
  "EC2RegionMap": {
   "us-west-2": {"craigLgami": "ami-0f2ef06f"}
  }
},
"Resources": {
  "SecurityGroup": {
   "Type": "AWS::EC2::SecurityGroup",
   "Properties": {
    "GroupDescription": "craigLg security group",
    "VpcId": "vpc-4e33072b",

    "SecurityGroupIngress": [
    {
     "CidrIp": "0.0.0.0/0",
     "FromPort": 22,
     "IpProtocol": "tcp",
     "ToPort": 22
    }
    ]
   }
  },
  "Server": {
   "Type": "AWS::EC2::Instance",
   "Properties": {
    "Tags" : [{
     "Key":"craig-elk-component",
     "Value":"logstash"
     }, {
     "Key":"Name",
     "Value":"craigLg"
     }
     ],
    "ImageId": {
     "Fn::FindInMap": [
      "EC2RegionMap", {
       "Ref": "AWS::Region"
      },
      "craigLgami"
     ]
    },
    "InstanceType": "m4.xlarge",
    "KeyName":  "craigradiantblueoregon" ,
    "SecurityGroupIds": [{
     "Ref": "SecurityGroup"
    }],
    "IamInstanceProfile": "craigelk",
    "UserData": {"Fn::Base64": {"Fn::Join": ["",
     [
"#!/bin/bash -ex\n",
"yum install git -y\n",
"yum install curl -y\n",
"sudo -u ec2-user bash -c 'cd /home/ec2-user; git clone -b go https://github.com/craigwongva/gocontainer.git > /tmp/u16 2>&1 '\n",
"/home/ec2-user/gocontainer/nexus-java/userdata-logstash > /tmp/u17 2>&1\n"
     ]
    ]}}
   }
  }
}
}

