myIP=`curl -s http://169.254.169.254/latest/meta-data/public-ipv4`
backingIP=$myIP
[ -z "$1" ] || backingIP=$1

echo replacing gateway
./replace-a-container gateway

echo replacing jobmanager $backingIP
./replace-a-container jobmanager $backingIP

echo replacing ingest $backingIP
./replace-a-container ingest $backingIP

echo replacing access $backingIP
./replace-a-container access $backingIP

echo replacing servicecontroller $backingIP
./replace-a-container servicecontroller $backingIP
