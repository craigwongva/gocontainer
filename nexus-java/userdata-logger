#These first two steps aren't needed because similar
#steps have already been performed on this server.
#But keep these lines here in case the overall code is refactored.
#wget https://storage.googleapis.com/golang/go1.4.2.linux-amd64.tar.gz
#tar -xzf go1.4.2.linux-amd64.tar.gz -C /usr/local

export GOROOT=/usr/local/go
export GOPATH=~
export PATH=$PATH:$GOROOT/bin
cd ~
git clone https://github.com/venicegeo/pz-logger
mkdir ~/src
mkdir ~/src/pz-logger
cp ~/pz-logger/main.go ~/src/pz-logger
go get github.com/venicegeo/pz-gocommon/gocommon
go get github.com/venicegeo/pz-logger/logger
go install pz-logger
~/bin/pz-logger
